// Função : Escreva um algortmo que dê bom dia ao nome do usuário.
// Autor : Methuzael Rodrigues
programa
{
	funcao inicio()
	{
		cadeia nome_do_usuário

		escreva ("Informe o nome do usuário :")
		leia (nome_do_usuário)
		escreva ("Bom dia ", nome_do_usuario, " !")
	}
}
