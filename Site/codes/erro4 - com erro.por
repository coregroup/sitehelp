//Descição do programa: Calcular a área de um retângulo
programa
{
	funcao inicio()
	{
		real altura, largura  // a variável "area" não foi declarada
		escreva("Digite a altura:")
		leia(altura)
		escreva("Digite a largura:")
		leia(largura)
		area=altura*largura // a variável "area" não foi declarada. 
		escreva("Área total= ",area)
		
	}
}
